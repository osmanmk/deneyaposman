#include <iostream>
using namespace std;
//Bu Proje Kodlayıcı(1) için Osman Mert K tarafından hazırlanmıştır.
int main(){
float x,y,z;
cout<<"Yari Capi Giriniz\n";
cin>>x;
y=(x*x)*3.14;
z=(x*2)*3.14;
cout<<"Yaricapini verdiginiz dairesin alani:"<< y << "\n";
cout<<"Yaricapini verdiginiz dairesin cevresi:"<<z;
return 0;
}
