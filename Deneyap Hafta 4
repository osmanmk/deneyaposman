//Normalde Türkçe Karakter Kullanımı İçin Kod Ekledim Ama Çalışmazsa Yazılar Bozulabilir.
//Hafta 4 Kodlayıcı 1 için Osman M  tarafından hazırlandı
#include <iostream>
#include <locale.h>
using namespace std;

int main(){
setlocale(LC_ALL, "Turkish");
int x;
cout<<"Lütfen Sayı Giriniz.\n";
cin>>x;
if(x%2==0){
    if(x%4==0){
     if(x==0){
cout<<"Hocam 0'ı inadına deneyeceğinizi bildiğimden bu easter eggi koydum.\n";
}else{
cout<<"Girdiğiniz Sayı Çifttir ve Dörte Tam Bölünür.\n";
}
   } else{
cout<<"Girdiğiniz Sayı Çifttir ama Dörte Tam Bölünmez.\n";
}
}
else{
    if(x%3==0){
cout<<"Girdiğiniz Sayı Tektir ve Üçe Tam Bölünür.\n";
}
    else{
cout<<"Girdiğiniz Sayı Tektir ama Üçe Tam Bölünmez.\n";
    }

}

return 0;
}





//Hafta 4 Tasarlayıcı 1 için Osman M tarafından hazırlandı.
#include <iostream>
#include <locale.h>
using namespace std;

int main(){
setlocale(LC_ALL, "Turkish");
int x;
cout<<"Lütfen Sayı Giriniz.\n";
cin>>x;
if(x>10){
x-=10;
}else{
x+=10;
}
cout<<x;
return 0;
}



//Yaşla ilgili olan problem
#include <iostream>
#include <locale.h>
using namespace std;

int main(){
setlocale(LC_ALL, "Turkish");
int u;
cout<<"Lütfen Yaş Giriniz.\n";
cin>>u;
if(u>18){
 if(u<65){
cout<<"20 TL ödenecektir.";
 }else{
cout<<"15 TL ödenecektir.";
 }}else{
cout<<"10 TL ödenecektir.";
 }
return 0;
}


//Puanla ilgili olan  problem
#include <iostream>
#include <locale.h>
using namespace std;

int main(){
setlocale(LC_ALL, "Turkish");
int x;
cout<<"Lütfen 0-100 Arası Puan Giriniz.\n";
cin>>x;
cout<<"\n";
if(x<=100&&x>=85){
cout<<"Takdir Belgesi Almıştır.";
}
else if(x<85&&x>=70){
cout<<"Teşekkür Belgesi Almıştır.";
}
else if(x<70&&x>=50){
cout<<"Sınıfı Geçmiştir ama Belge Almamıştır.";
}
else if(x<50&&x>=0){
cout<<"Sınıfı Geçememiştir.";
}
else{
cout<<"Sistemi Yanıltmaya Çalıştığınızdan Dolayı Cezalandırıldınız,Bu Soruyu Çözünüz:P(x)=3x+2 olduðuna göre P(x) polinomunun (x-2)'den kalan kaçtır?";
}
return 0;
}
